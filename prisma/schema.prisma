// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String         @id @default(cuid())
  name              String?
  email             String         @unique
  emailVerified     DateTime?
  image             String?
  password          String?
  role              UserRole       @default(USER)
  subscriptionStatus SubscriptionStatus @default(NONE)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  
  accounts          Account[]
  sessions          Session[]
  purchases         Purchase[]
  subscriptions     Subscription[]
  favorites         Favorite[]
  
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Route {
  id              String       @id @default(cuid())
  title           String
  description     String       @db.Text
  distance        Float        // in kilometers
  elevationGain   Int          // in meters
  difficulty      Difficulty
  location        String
  gpxFileUrl      String
  thumbnailUrl    String
  images          String[]     @default([])
  accessType      AccessType
  price           Float?       // price in USD
  tags            String[]     @default([])
  metadata        Json?        // flexible field for additional data
  isPublished     Boolean      @default(false)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  purchases       Purchase[]
  bundleRoutes    BundleRoute[]
  favorites       Favorite[]
  emailDownloads  EmailDownload[]
  
  @@map("routes")
}

model Purchase {
  id              String          @id @default(cuid())
  userId          String
  routeId         String
  amount          Float
  paymentProvider PaymentProvider
  transactionId   String
  status          PurchaseStatus  @default(COMPLETED)
  purchasedAt     DateTime        @default(now())
  
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  route           Route           @relation(fields: [routeId], references: [id], onDelete: Cascade)
  
  @@unique([userId, routeId])
  @@map("purchases")
}

model Subscription {
  id                   String             @id @default(cuid())
  userId               String
  planType             SubscriptionPlan
  status               SubscriptionStatus
  stripeSubscriptionId String?            @unique
  paypalSubscriptionId String?            @unique
  startDate            DateTime
  endDate              DateTime?
  cancelAt             DateTime?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  
  user                 User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("subscriptions")
}

model Bundle {
  id          String        @id @default(cuid())
  name        String
  description String        @db.Text
  price       Float
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  bundleRoutes BundleRoute[]
  bundlePurchases BundlePurchase[]
  
  @@map("bundles")
}

model BundleRoute {
  id       String @id @default(cuid())
  bundleId String
  routeId  String
  
  bundle   Bundle @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  route    Route  @relation(fields: [routeId], references: [id], onDelete: Cascade)
  
  @@unique([bundleId, routeId])
  @@map("bundle_routes")
}

model BundlePurchase {
  id              String          @id @default(cuid())
  userId          String
  bundleId        String
  amount          Float
  paymentProvider PaymentProvider
  transactionId   String
  purchasedAt     DateTime        @default(now())
  
  bundle          Bundle          @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  
  @@unique([userId, bundleId])
  @@map("bundle_purchases")
}

model EmailSubscriber {
  id          String   @id @default(cuid())
  email       String   @unique
  source      String   // "route_download", "newsletter", "signup"
  verified    Boolean  @default(false)
  subscribedAt DateTime @default(now())
  
  @@map("email_subscribers")
}

model EmailDownload {
  id          String   @id @default(cuid())
  email       String
  routeId     String
  token       String   @unique
  expiresAt   DateTime
  downloadedAt DateTime?
  createdAt   DateTime @default(now())
  
  route       Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  
  @@map("email_downloads")
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  routeId   String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  route     Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  
  @@unique([userId, routeId])
  @@map("favorites")
}

// Enums
enum UserRole {
  USER
  ADMIN
}

enum Difficulty {
  EASY
  MODERATE
  HARD
  EXPERT
}

enum AccessType {
  FREE
  PAID
  PREMIUM
}

enum PaymentProvider {
  STRIPE
  PAYPAL
}

enum PurchaseStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum SubscriptionPlan {
  MONTHLY
  YEARLY
}

enum SubscriptionStatus {
  NONE
  ACTIVE
  CANCELLED
  EXPIRED
}
